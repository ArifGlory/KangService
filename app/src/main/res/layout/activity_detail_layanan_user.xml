<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:background="@color/colorBg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:id="@+id/rlRegistration"
        android:background="@drawable/bg_top_shap_10">

        <TextView
            android:id="@+id/tvnamaLayananUser"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10dp"
            android:text="nama Layanan"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tvRincianLayanan"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:text="rincian"
            android:textColor="@color/black2"
            android:textSize="11sp" />



        <EditText
            android:id="@+id/edMerkHP"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_onlycorner_gary"
            android:hint="Merk Handphone anda"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edAlamatUser"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/edFullName"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_onlycorner_gary"
            android:hint="Alamat anda"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/lineButtonGroup"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_below="@id/rlRegistration"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSend"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edDeskripsi"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_onlycorner_gary"
            android:backgroundTint="@color/main_green_color"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:text="Kirim Permintaan Perbaikan"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:layout_above="@id/rlRegistration">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/ivSparepart"
            android:src="@drawable/ic_placeholder"
            android:layout_centerInParent="true"/>
        <TextView
           android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/ivSparepart"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10sp"
            android:text="Tap Untuk Mengubah Foto"
            android:textColor="@color/black2"
            android:textSize="14sp"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/rlRegistration"
        android:background="@drawable/bg_top_shap_10">

        <TextView
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Tambah Sparepart"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />



        <EditText
            android:id="@+id/edFullName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_onlycorner_gary"
            android:hint="Nama"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edHarga"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/edFullName"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_onlycorner_gary"
            android:hint="Harga"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edStok"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/edFullName"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_onlycorner_gary"
            android:hint="Stok"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvAdd"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edDeskripsi"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_onlycorner_gary"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:text="Tambahkan"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/tvAdd">

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
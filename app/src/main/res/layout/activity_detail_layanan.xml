<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:background="@color/colorBg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:id="@+id/rlRegistration"
        android:background="@drawable/bg_top_shap_10">

        <TextView
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Detail Layanan Kendala"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />



        <EditText
            android:id="@+id/edNamaLayanan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tvTitle"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_editfield"
            android:hint="Nama Layanan"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/edHargaLayanan"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/edFullName"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_editfield"
            android:hint="Harga"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edEstimasi"
                android:layout_toLeftOf="@+id/tvTitleEstimasi"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10sp"
                android:background="@drawable/bg_editfield"
                android:hint="Estimasi Selesai"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="14sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvTitleEstimasi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content"
                android:text="Hari"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edRincian"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/edFullName"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/bg_editfield"
            android:hint="Deskripsikan Rincian Layanan"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSaveUpdate"
            android:textStyle="bold"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edDeskripsi"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_editfield"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:text="Simpan Perubahan"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/tvAdd">

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/lineButtonGroup"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:layout_below="@id/rlRegistration"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEdit"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edDeskripsi"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_editfield"
            android:backgroundTint="@color/main_green_color"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:text="Ubah"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edDeskripsi"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_editfield"
            android:backgroundTint="@color/red_btn_bg_color"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:text="Hapus"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

    </LinearLayout>
</RelativeLayout>